MakeNamedMedium "mymedium"
  "string type" "heterogeneous"
  "rgb sigma_a" [ 0.5 0.5 0.5 ]
  "rgb sigma_s" [ 2.55 2.55 2.55 ]
  #"float scale" 3
  "point p0" [ -7 5 -27.8 ]
  "point p1" [ -3.88 8.2 -24.6 ]
