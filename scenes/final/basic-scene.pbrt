  LightSource "infinite"
     "string mapname" "Environment_Maps/kloppenheim_02_4k.png"
     #"rgb scale" [ 5 5 5 ]
AttributeEnd

AttributeBegin
  AreaLightSource "diffuse"
  "rgb L" [ 55 24 5 ]
